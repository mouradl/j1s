<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="membre" pattern="/">
        <default key="_controller">TuniAdminBundle:Membre:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="membre_create" pattern="/create">
        <default key="_controller">TuniAdminBundle:Membre:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="membre_new" pattern="/new">
        <default key="_controller">TuniAdminBundle:Membre:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="membre_show" pattern="/{id}/show">
        <default key="_controller">TuniAdminBundle:Membre:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="membre_certif" pattern="/{id}/certif">
        <default key="_controller">TuniAdminBundle:Membre:certif</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="membre_setcertif" pattern="/setcertif">
        <default key="_controller">TuniAdminBundle:Membre:setcertif</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="membre_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAdminBundle:Membre:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="membre_update" pattern="/{id}/update">
        <default key="_controller">TuniAdminBundle:Membre:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="membre_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAdminBundle:Membre:delete</default>
         <requirement key="_method">GET</requirement>
    </route>
<route id="membre_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:Membre:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
